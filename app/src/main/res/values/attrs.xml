<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="item_icon" format="reference"/>
        <attr name="item_arrow" format="reference"/>
        <attr name="item_arrow_visibility" format="enum">
            <enum name="gone" value="0"/>
            <enum name="visible" value="1"/>
            <enum name="invisible" value="2"/>
        </attr>
        <attr name="item_left_text" format="string"/>
        <attr name="item_right_text" format="string"/>
        <attr name="item_left_color" format="color"/>
        <attr name="item_right_color" format="color"/>
        <attr name="item_left_size" format="dimension"/>
        <attr name="item_right_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="bmWidth" format="dimension"/>
        <attr name="bmHeight" format="dimension"/>
    </declare-styleable>

</resources>