<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/main_menu"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/shadow_bg"
             android:descendantFocusability="blocksDescendants"
             android:paddingBottom="2dp"
             android:paddingTop="2dp"
             android:visibility="invisible">

    <com.admin.app.view.CircleImageView
        android:id="@+id/menu_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:src="@mipmap/icon_menu_category"/>

    <com.admin.app.view.CircleImageView
        android:id="@+id/menu_around"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:src="@mipmap/icon_menu_around"/>

    <com.admin.app.view.CircleImageView
        android:id="@+id/menu_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:src="@mipmap/icon_menu_search"/>

    <com.admin.app.view.CircleImageView
        android:id="@+id/menu_hot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:src="@mipmap/icon_menu_hot"/>


    <com.admin.app.view.CircleImageView
        android:id="@+id/menu_close"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@mipmap/icon_add"/>

</FrameLayout>