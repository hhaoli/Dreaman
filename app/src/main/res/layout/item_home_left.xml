<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <FrameLayout
        android:id="@+id/item_home_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/item_bg_left">

        <TextView
            android:id="@+id/item_home_tv"
            style="@style/TextView"
            android:layout_gravity="end|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:minLines="2"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingStart="10dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_body"/>

        <ImageView
            android:id="@+id/item_home_color"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/blue"
            android:contentDescription="@null"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            style="@style/ImageViewVertical"
            android:layout_gravity="center_horizontal"/>

        <com.admin.app.view.CircleImageView
            android:id="@+id/item_home_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@color/blue"/>

    </FrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"/>

</LinearLayout>