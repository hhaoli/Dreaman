<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/green"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_subclass_icon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@color/blue" />

        <TextView
            android:id="@+id/item_subclass_name"
            style="@style/TextView"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/gray_dark" />

        <ImageView style="@style/ImageViewHorizontal" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_subclass_price"
                    style="@style/TextView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_body" />

                <TextView
                    style="@style/TextView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/original_price" />

                <TextView
                    android:id="@+id/item_subclass_original_price"
                    style="@style/TextView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/original_price" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/item_subclass_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progressbar_color" />

                <TextView
                    android:id="@+id/item_subclass_number"
                    style="@style/TextView"
                    android:background="@color/orange"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/beans_white_empty"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>