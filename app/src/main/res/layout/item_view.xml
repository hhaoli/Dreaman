<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_size"
                android:background="@color/white">

    <ImageView
        android:id="@+id/item_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/item_view_left_text"
        style="@style/TextView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_view_icon"
        android:layout_toRightOf="@+id/item_view_icon"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_body"/>

    <TextView
        android:id="@+id/item_view_right_text"
        style="@style/TextView"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_view_arrow"
        android:layout_toStartOf="@+id/item_view_arrow"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_body"/>

    <ImageView
        android:id="@+id/item_view_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/arrow_right_black"
        android:contentDescription="@null"
        android:visibility="visible"/>

    <ImageView
        style="@style/ImageViewHorizontal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>